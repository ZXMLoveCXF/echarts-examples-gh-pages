
extends layouts/inner

block inner_content

    div(id='main-container')
        div(id='code-container')
            div(id="control-panel")
                div(id='code-info')
                div(class="control-btn-panel")
                    a(class='btn btn-default btn-sm', href='javascript:;', onclick='disposeAndRun()') #{lang == 'cn' ? '运行' : 'RUN'}
            div(id='code-panel')

        div(class='handler', id='h-handler')

        div(class='right-container')
            div(class='right-panel', id='chart-panel')
            div(id="tool-panel")
                #theme
                    a(class="default" title="default")
                        span
                    a(class="light" title="light")
                        span
                    a(class="dark" title="dark")
                        span
                button#download.btn.btn-sm Download

    script.
        if (window !== top) {
            var nav = document.getElementsByClassName('navbar')[0];
            nav.parentNode.removeChild(nav);
            document.getElementById('main-container').style.top = 0;
        }
